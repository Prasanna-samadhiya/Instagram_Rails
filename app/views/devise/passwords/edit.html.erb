<div style="padding-bottom: 100px; min-height: 500px;">
  <h2 style="text-align: center; font-size: 2rem; color: white; margin-bottom: 20px; text-shadow: 1px 1px 2px #000;">Change Your Password</h2>

  <div style="max-width: 420px; margin: 0 auto; padding: 25px; background: rgba(255, 255, 255, 0.9); border-radius: 12px; box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2); backdrop-filter: blur(6px);">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, style: "display: flex; flex-direction: column; gap: 16px;" }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div>
        <%= f.label :password, "New password", style: "display: block; font-weight: 600; margin-bottom: 6px;" %>
        <% if @minimum_password_length %>
          <small style="color: #888;">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 8px;" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirm new password", style: "display: block; font-weight: 600; margin-bottom: 6px;" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 8px;" %>
      </div>

      <div>
        <%= f.submit "Change my password", style: "width: 100%; padding: 12px; background-color: #ee2a7b; color: white; font-weight: bold; border: none; border-radius: 8px; cursor: pointer; transition: background 0.3s;" %>
      </div>
    <% end %>

    <div style="text-align: center; margin-top: 12px;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
