<div style="padding-bottom:280px; min-height: 500px;">
  <h2 style="text-align: center; font-size: 2rem; color: white; margin-bottom: 20px; text-shadow: 1px 1px 2px #000;">
    Forgot your password?
  </h2>

  <div style="max-width: 420px; margin: 0 auto; padding: 25px; background: rgba(255, 255, 255, 0.9); border-radius: 12px; box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2); backdrop-filter: blur(6px);">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, style: "display: flex; flex-direction: column; gap: 16px;" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, style: "display: block; font-weight: 600; margin-bottom: 6px;" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 8px;" %>
      </div>

      <div>
        <%= f.submit "Send reset instructions", style: "width: 100%; padding: 12px; background-color: #6228d7; color: white; font-weight: bold; border: none; border-radius: 8px; cursor: pointer; transition: background 0.3s;" %>
      </div>
    <% end %>

    <div style="text-align: center; margin-top: 12px;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>